<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Admin Dashboard"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="416dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Select the subject for the content modification"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbutton1"
        android:layout_width="124dp"
        android:layout_height="110dp"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="136dp"
        android:contentDescription="JAVA"
        android:src="@drawable/java"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="135dp"
        android:layout_height="107dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="136dp"
        android:contentDescription="ANDROID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newandroid" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="126dp"
        android:layout_height="105dp"
        app:srcCompat="@drawable/webdev"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="267dp" />


</androidx.constraintlayout.widget.ConstraintLayout>