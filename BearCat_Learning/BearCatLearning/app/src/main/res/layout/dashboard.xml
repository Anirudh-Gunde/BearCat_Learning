<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses in MS CSIS"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
    <TextView
        android:id="@+id/profileNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hi"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/javaIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/java"
        android:contentDescription="Java"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/adbIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/adb"
        android:contentDescription="Advance Database"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/javaIB"/>
    <ImageButton
        android:id="@+id/webdevIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/webdev"
        android:contentDescription="Web Development"
        app:layout_constraintTop_toBottomOf="@id/javaIB"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/androidIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/android"
        android:contentDescription="Mobile Computing Android"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/adbIB"
        app:layout_constraintStart_toEndOf="@id/webdevIB"/>
    <ImageButton
        android:id="@+id/patternsIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/patterns"
        android:contentDescription="Patterns"
        app:layout_constraintTop_toBottomOf="@id/webdevIB"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/gdpIB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pm"
        android:contentDescription="Project Management"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/androidIB"
        app:layout_constraintStart_toEndOf="@id/patternsIB"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="130dp"
        android:layout_marginRight="280dp"
        app:layout_constraintTop_toBottomOf="@id/gdpIB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>