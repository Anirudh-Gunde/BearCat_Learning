<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="458dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Welcome to the Admin Dashboard"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/instructionTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Select the subject for the content modification"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/imgbutton1"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTextView"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/imgbutton1"
            android:layout_width="124dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="JAVA"
            android:src="@drawable/java"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2"
            app:layout_constraintTop_toBottomOf="@+id/instructionTextView"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="135dp"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="ANDROID"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/imgbutton1"
            app:srcCompat="@drawable/android"
            tools:ignore="HardcodedText,MissingConstraints,ImageContrastCheck"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="126dp"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:contentDescription="Web APPS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            app:srcCompat="@drawable/webdev"
            tools:ignore="HardcodedText,MissingConstraints,SpeakableTextPresentCheck,UnknownId"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="101dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:text="hi"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.987"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/LogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="687dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
